# AIMEX API 환경 변수 설정
# 이 파일을 .env로 복사하고 실제 값으로 수정하세요

# =============================================================================
# 기본 설정
# =============================================================================
DEBUG=True
LOG_LEVEL=INFO

# =============================================================================
# 데이터베이스 설정
# =============================================================================
DATABASE_URL=mysql+pymysql://root:password@localhost:3306/AIMEX_MAIN
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30

# =============================================================================
# 보안 설정
# =============================================================================
# JWT 시크릿 키 (프로덕션에서는 반드시 변경하세요)
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# =============================================================================
# 허깅페이스 설정
# =============================================================================
HUGGINGFACE_TIMEOUT=30

# =============================================================================
# API 제한 설정
# =============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# =============================================================================
# 파일 업로드 설정
# =============================================================================
MAX_FILE_SIZE=10485760

# =============================================================================
# 캐시 설정
# =============================================================================
CACHE_TTL=300

# =============================================================================
# 로깅 설정
# =============================================================================
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# 개발 환경 설정
# =============================================================================
# 개발 환경에서는 DEBUG=True로 설정
# 프로덕션 환경에서는 DEBUG=False로 설정

# =============================================================================
# 보안 주의사항
# =============================================================================
# 1. SECRET_KEY는 반드시 강력한 랜덤 문자열로 설정하세요
# 2. 프로덕션에서는 DEBUG=False로 설정하세요
# 3. 데이터베이스 비밀번호는 안전하게 관리하세요
# 4. .env 파일은 절대 Git에 커밋하지 마세요

# =============================================================================
# 시크릿 키 생성 방법
# =============================================================================
# Python에서 강력한 시크릿 키 생성:
# python -c "import secrets; print(secrets.token_urlsafe(32))"

# CORS Configuration
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:3001"]

# HuggingFace Configuration
HUGGINGFACE_API_URL=https://api.huggingface.co 