# ===================================================
# AIMEX Backend 환경 변수 설정 예시
# ===================================================
# 이 파일을 복사하여 .env 파일을 생성하고 실제 값으로 수정하세요.
# cp env.example .env

# ===================================================
# 데이터베이스 설정
# ===================================================

# MySQL 데이터베이스 연결 URL
# 형식: mysql+pymysql://username:password@host:port/database
DATABASE_URL=mysql+pymysql://root:password@localhost:3306/AIMEX_MAIN

# 데이터베이스 연결 풀 설정 (선택사항)
# DB_POOL_SIZE=10
# DB_MAX_OVERFLOW=20
# DB_POOL_TIMEOUT=30

# ===================================================
# 보안 설정
# ===================================================

# JWT 토큰 시크릿 키 (강력한 랜덤 문자열 사용 권장)
# 예시: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-here-change-this-in-production

# JWT 액세스 토큰 만료 시간 (분)
# 기본값: 7일 (10080분)
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# JWT 리프레시 토큰 만료 시간 (분)
# 기본값: 30일 (43200분)
REFRESH_TOKEN_EXPIRE_MINUTES=43200

# JWT 알고리즘
JWT_ALGORITHM=HS256

# ===================================================
# 애플리케이션 설정
# ===================================================

# 디버그 모드 (개발 환경: True, 운영 환경: False)
DEBUG=True

# 애플리케이션 환경 (development, staging, production)
ENVIRONMENT=development

# 애플리케이션 이름
APP_NAME=AIMEX Backend

# 애플리케이션 버전
APP_VERSION=1.0.0

# ===================================================
# 서버 설정
# ===================================================

# 서버 호스트 (개발: 0.0.0.0, 운영: 특정 IP)
HOST=0.0.0.0

# 서버 포트
PORT=8000

# 워커 수 (운영 환경에서 사용)
# WORKERS=4

# ===================================================
# CORS 설정
# ===================================================

# 허용된 오리진 (쉼표로 구분)
# 개발 환경: http://localhost:3000,http://127.0.0.1:3000
# 운영 환경: https://yourdomain.com
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# CORS 자격 증명 허용
CORS_ALLOW_CREDENTIALS=True

# ===================================================
# 로깅 설정
# ===================================================

# 로그 레벨 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# 로그 파일 경로 (선택사항)
# LOG_FILE=logs/app.log

# 로그 포맷
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ===================================================
# 소셜 로그인 설정 (선택사항)
# ===================================================

# Google OAuth 설정
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# Kakao OAuth 설정
# KAKAO_CLIENT_ID=your-kakao-client-id
# KAKAO_CLIENT_SECRET=your-kakao-client-secret

# Naver OAuth 설정
# NAVER_CLIENT_ID=your-naver-client-id
# NAVER_CLIENT_SECRET=your-naver-client-secret

# ===================================================
# 파일 업로드 설정 (선택사항)
# ===================================================

# 업로드 디렉토리
# UPLOAD_DIR=uploads

# 최대 파일 크기 (MB)
# MAX_FILE_SIZE=10

# 허용된 파일 타입
# ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# ===================================================
# 캐시 설정 (선택사항)
# ===================================================

# Redis 연결 URL (캐시 사용 시)
# REDIS_URL=redis://localhost:6379/0

# 캐시 TTL (초)
# CACHE_TTL=3600

# ===================================================
# 이메일 설정 (선택사항)
# ===================================================

# SMTP 서버 설정
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_TLS=True

# 발신자 이메일
# FROM_EMAIL=noreply@aimex.com

# ===================================================
# 모니터링 설정 (선택사항)
# ===================================================

# Sentry DSN (에러 추적)
# SENTRY_DSN=https://your-sentry-dsn

# Prometheus 메트릭 수집
# ENABLE_METRICS=True

# ===================================================
# 개발 도구 설정
# ===================================================

# 자동 리로드 (개발 환경에서만 사용)
RELOAD=True

# API 문서 표시
ENABLE_DOCS=True

# ===================================================
# 테스트 설정
# ===================================================

# 테스트 데이터베이스 URL
# TEST_DATABASE_URL=mysql+pymysql://root:password@localhost:3306/AIMEX_TEST

# 테스트 모드
# TESTING=False

# ===================================================
# 주의사항
# ===================================================
# 1. 운영 환경에서는 SECRET_KEY를 강력한 랜덤 문자열로 변경하세요
# 2. 데이터베이스 비밀번호는 안전하게 관리하세요
# 3. DEBUG=False로 설정하여 디버그 정보를 숨기세요
# 4. ALLOWED_ORIGINS를 실제 도메인으로 제한하세요
# 5. 로그 파일 경로는 적절한 권한으로 설정하세요 